<h1>Burger Time!</h1>

<h2>Devoured Burgers: </h2>

<ul>
  {{#each cats}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Uneaten Burgers: </h2>

<ul>
  {{#each cats}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-groups">
    
    <input type="radio" name="sleepy" value="1" checked>
    <input type="radio" name="sleepy" value="0">
  </div>

  <button type="submit">Add Burger</button>
</form>
